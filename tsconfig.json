{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "module": "ES2020",
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["ES2019", "dom"],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
