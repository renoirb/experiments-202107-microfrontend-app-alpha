{
  "extends": "./node_modules/@renoirb/conventions-use-typescript-3/includes/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "strict": true,
    "module": "ES2020",
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ]
}